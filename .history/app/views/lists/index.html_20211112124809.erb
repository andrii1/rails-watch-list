<h1>Lists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= link_to 'New', new_list_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

